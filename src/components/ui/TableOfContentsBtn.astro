---
import { Icon } from 'astro-icon/components';
---

<div id="toc-btn-wrapper" class="fixed bottom-5 right-5 md:bottom-2 md:right-6 z-45 w-16 hidden opacity-0 pointer-events-none transition duration-300">
  <button
    id="toc-toggle-btn"
    class="flex items-center p-4 w-full bg-mikado-500/75 hover:bg-mikado-500 hover:text-mikado-950 hover:shadow-sm focus-visible:bg-mikado-300 focus-visible:text-black focus-visible:border-black cursor-pointer transition duration-300"
    type="button"
    title="show table of contents"
    aria-label="show table of contents"
    aria-pressed="false"
  >
    <Icon name="ri:menu-2-line" height={32} width={32} />
  </button>
</div>
