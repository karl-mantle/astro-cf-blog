---
import { Icon } from "astro-icon/components";
---

<div
  id="toc-btn-wrapper"
  class="pointer-events-none fixed right-5 bottom-5 z-45 hidden w-16 opacity-0 transition duration-300 md:right-6 md:bottom-2"
>
  <button
    id="toc-toggle-btn"
    class="bg-mikado-500/75 hover:bg-mikado-500 hover:text-mikado-950 focus-visible:bg-mikado-300 flex w-full cursor-pointer items-center p-4 transition duration-300 hover:shadow-sm focus-visible:border-black focus-visible:text-black"
    type="button"
    title="show table of contents"
    aria-label="show table of contents"
    aria-pressed="false"
  >
    <Icon name="ri:menu-2-line" height={32} width={32} />
  </button>
</div>
