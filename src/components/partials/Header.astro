---
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";
import HeaderNavigation from "~/components/partials/HeaderNavigation.astro";
---

<header
  id="site-header"
  class="border-mikado-500 grid max-h-full grid-cols-[1fr_auto] content-start gap-y-4 overflow-y-auto border-r p-4 md:mt-8 md:h-[calc(100%-2rem)] md:grid-cols-1 md:place-self-end md:pr-8"
>
  <a
    class="group/logo focus-visible:bg-mikado-300 inline-flex items-center gap-3 border-b-2 border-transparent p-1 transition duration-500 focus-visible:border-black"
    href={Astro.site}
    aria-label="link to homepage"
  >
    <Image src="/favicon.svg" alt="" format="svg" width={32} height={32} loading="eager" />
    <span
      class="group-hover/logo:border-mikado-900 border-b border-transparent py-1 text-xl leading-none font-medium transition duration-500 group-focus/logo:border-b-2 group-focus-visible/logo:text-black"
      >karl's blog</span
    >
  </a>

  <button
    class="place-self-end p-2 md:hidden"
    aria-label="toggle mobile site navigation"
    id="nav-toggle-btn"
    aria-expanded="false"
    aria-controls="site-nav"
  >
    <Icon name="ri:menu-line" height={28} width={28} id="nav-open-btn" />
    <Icon name="ri:close-line" height={28} width={28} id="nav-close-btn" class="hidden" />
  </button>

  <HeaderNavigation />
</header>
