---
import type { HTMLAttributes } from 'astro/types';
import { Picture } from 'astro:assets';
import { slugify } from '~/utils/collections';
import Button from '~/components/ui/Button.astro';
import Date from '~/components/ui/Date.astro';

interface Props extends HTMLAttributes<'header'> {
  category: string,
  date: Date,
  description: string,
  heading: string,
  image?: {
    alt: string | null,
    src: ImageMetadata
  }
};

const { category, date, heading, image }: Props = Astro.props;
---

<header class="flex flex-col gap-4">
  { image && (
    <Picture
      src={image.src as any}
      widths={[480, 960]}
      sizes={`(max-width: 640px) 480px`}
      inferSize
      formats={['webp']}
      loading="lazy"
      class="object-cover aspect-video md:mb-4"
      alt={image.alt ?? ''}
    />
  )}

  <h1 class="text-2xl md:text-4xl font-semibold pb-4 border-b border-mikado-500">{heading}</h1>

  <div class="flex items-center gap-1 text-sm">
    <Date date={date} />
    <span>|</span>
    <Button
      href={`${Astro.site}blog/category/${slugify(category)}`}
      label={category}
    />
  </div>

</header>
