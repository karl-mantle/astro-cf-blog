---
import type { HTMLAttributes } from "astro/types";
import { Icon } from "astro-icon/components";

interface Props extends HTMLAttributes<"details"> {
  summary: string;
}

const { summary, ...rest } = Astro.props;
---

<details class="group/details" {...rest}>
  <summary
    class="hover:text-mikado-950 border-mikado-500 focus-visible:bg-focus-color dark:focus:text-mikado-50 flex w-full cursor-pointer list-none items-center justify-between gap-4 border-b p-4 transition duration-300 focus:text-black focus-visible:border-b-2 focus-visible:border-black focus-visible:text-black dark:hover:text-white dark:focus-visible:text-black"
    aria-haspopup="true"
  >
    <span>{summary}</span>
    <Icon
      class="w-4 transition duration-300 group-open/details:rotate-180"
      name="material-symbols:keyboard-arrow-down"
      height={16}
      width={16}
    />
  </summary>

  <slot />
</details>
